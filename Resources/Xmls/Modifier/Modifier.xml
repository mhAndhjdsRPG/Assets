<Midifiers>
  
  <无敌>
    <State>
    <InvulnerableModifierState duration="5" interval="-1"/>
    </State>
  </无敌>

  <眩晕>
    <ModifierParam>
      <IsPurgable value="true"/>
      ......
      ......
      ......
    </ModifierParam>
    
    <States>
      <CanNotMove duration="5" intercal="-1"/>
      <CanNotAttack duration="5" intercal="-1"/>
      <SetAniBool duration="5" intercal="-1" paramName="眩晕"/>
      <DrawPicturOnHead duration="5" intercal="-1" path="......."/>
    </States>
  </眩晕>
  
</Midifiers>